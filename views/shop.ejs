<%- include('includes/head.ejs') %>
</head>
<body>
<%- include('includes/navigation.ejs') %>

    <main>
        <% if(prods.length > 0) { %>
            <div class="productHold">
                <% for(let product of prods){ %>
                    <div class="card">
                        <h2 class="cardTitle"><%= product.title %> </h2>
                        <img src="https://images.unsplash.com/photo-1542291026-7eec264c27ff?ixid=MnwxMjA3fDB8MHxzZWFyY2h8MXx8c2hvZXN8ZW58MHx8MHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=60" alt="Nike">
                        <div class="cardText">
                            <p class="categoryText"> men's sport shoes </p>
                            <h2 class="brandText"> Nike </h2>
                            <p class="priceText"> $250</p>    
                        </div>                       
                    </div>  
                <% } %>                             
            </div>
        <% } else { %>
            <h1>No Products Found...</h1>
        <% } %>
    </main>
<%- include('includes/end.ejs') %>