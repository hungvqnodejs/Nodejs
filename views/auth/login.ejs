<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/home.css">
<link rel="stylesheet" href="/css/login.css">
<link rel="stylesheet" href="/css/main.css">
</head>

<body>  
    <header class="masthead">
        <div class="wrapper fadeInDown">
            <div id="formContent">
              <% if (errorMessage) { %>
              <div class="error-msg accordion-body"><%= errorMessage %></div>
              <% } %>
              <form class="login-form texttop" action="/login" method="POST">
                <input type="text" id="login" class="fadeIn second " name="account" placeholder="Tên đăng nhập">
                <input type="password" id="password" class="fadeIn third" name="password" placeholder="Mật khẩu">
                <input type="submit" class="fadeIn fourth btn-primary" value="Đăng nhập">
              </form>
              <div id="formFooter">
                <a class="underlineHover" href="#">Quên mật khẩu</a>
              </div>
          
            </div>
          </div>
    </header>

<%- include('../includes/end.ejs') %>

