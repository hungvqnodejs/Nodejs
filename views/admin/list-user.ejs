<%- include('../includes/head.ejs') %>
<link href="/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="/css/admin.min.css" rel="stylesheet">
    <link href="/css/main.css" rel="stylesheet">
</head>

<body>  
    <header class="masthead">
          <!-- Page Wrapper -->
    <div id="wrapper">

 <%- include('../includes/navigation-admin.ejs') %>
  
    <!-- End of Page Wrapper -->
       
    <!-- Begin Page Content -->
    <div class="container-fluid">
        <br><br>
        <!-- Page Heading -->
        <h1 class="h3 mb-2 text-gray-800">Quản lý người dùng</h1>
        <br>
        <!-- DataTales Example -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Danh sách người dùng</h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Tên</th>
                                <th>Tài khoản</th>
                                <th>Số điện thoại</th>
                               
                                <th style="width: 11%;"></th>
                            </tr>
                        </thead>
                     
                        <tbody>
                            <% if (users.length > 0) { %>
                                <% for (let user of users) { %>   
                            <tr>
                                <td><%= user.userName %></td>
                                <td><%= user.email %></td>
                                <td><%= user.numberPhone %></td>
                                <td style="width: 11%;"><a  href="/admin/detail-user/<%= user._id %>" class="btn btn-sm btn-outline-secondary"><i class="fas fa-lg fa-info-circle"></i> Chi tiết</a></td>
                            </tr>

                            <% } %>
                            <% } %>  
                            
                            
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
    <!-- /.container-fluid -->

    </div>
<!-- End of Main Content -->

    </header>
