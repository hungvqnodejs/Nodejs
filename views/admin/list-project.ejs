<%- include('../includes/head.ejs') %>
<link href="/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet">
        <script src="https://code.jquery.com/jquery-3.5.1.min.js" crossorigin="anonymous"></script>
    <!-- Custom styles for this template-->
    <link href="/css/admin.min.css" rel="stylesheet">
    <link href="/css/main.css" rel="stylesheet">
</head>

<body>  
    <header class="masthead">
          <!-- Page Wrapper -->
    <div id="wrapper">

 <%- include('../includes/navigation-admin.ejs') %>
  
    <!-- End of Page Wrapper -->
       
    <!-- Begin Page Content -->
    <div class="container-fluid">
        <br><br>
        <!-- Page Heading -->
        <h1 class="h3 mb-2 text-gray-800">Quản lý dự án</h1>
        <br>

        <% if (message) { %>  
      <!-- Alert -->
      <div class="alert <%= styleAlert %> alert-dismissible fade show " role="alert" >
         <%= message %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
      <% } %>
      <!-- DataTales Example -->
      <div class="card shadow mb-4">
        <div class="card-body">
          <div class="row g-5">
            <div class="col-md-5 col-lg-4 order-md-last">
              <h4 class="d-flex justify-content-between align-items-center mb-3">
                <span class="text-primary">Dự án đã kết thúc</span>
              </h4>
              <ul class="list-group mb-3">
                <% if (projects.length > 0) { %>
                  <% for (let proj of projects) { %>
                    <% if (Math.ceil((proj.endTime - new Date()) / (1000 * 60 * 60 * 24)) <= 0) { %>
                      <li class="list-group-item d-flex justify-content-between lh-sm" data-bs-toggle="collapse" data-bs-target="#collapseExample-<%= proj._id %>" aria-expanded="false" aria-controls="collapseExample">
                        <div>
                          <h6 class="my-0"><%= proj.title %></h6>
                          <small class="text-muted">Brief description</small>
                        </div>
                        <i class="fas fa-lg fa-angle-down "></i>
                      </li>
                      <div class="collapse" id="collapseExample-<%= proj._id %>">
                        <div class="card card-body">
                         <p><i class="fas fa-calendar-alt"></i> &#160; Ngày bắt đầu: <%= proj.startTime.toLocaleDateString('pt-PT') %></p>
                         <p><i class="fas fa-calendar-alt"></i>  &#160;Ngày kết thúc: <%= proj.endTime.toLocaleDateString('pt-PT') %></p>
                         <p><i class="fas fa-dollar-sign"></i>  &#160; Số tiền quyên góp: 400.000.000 VND</p>
                         <p><i class="fas fa-shopping-cart"></i>  &#160; Lượt quyên góp: 643</p>
        
                        </div>
                      </div> 
                    <% } %>  
                  <% } %>
                <% } %> 
              </ul>
            </div>
            <div class="col-md-7 col-lg-8">
              <h4 class="mb-3 text-primary">Dự án đang diễn ra</h4>
              <div class="table-responsive">
                <table class="table" id="dataTable" cellspacing="0">

                  <thead>
                    <tr>
                        <th style="padding-left: 10px;"><input type="checkbox"  id="optionAll" name="optionAll" ></th>
                        <th>Dự án</th>
                        <th>Tiến trình</th>
         
                        <th></th>
                        <th class="verticalAlign pl-0" style="width: 9%;">
                          <button class="btn btn-danger btn-icon-split" data-bs-toggle="modal" data-bs-target="#deleteModalAll"> <span class="icon text-white-60">
                            <i class="far fa-trash-alt"></i>
                        </span></button>

                        
                          <form action="/admin/list-project" method="POST">
                            
                           <!-- Delete All Modal  -->
<div class="modal fade" id="deleteModalAll" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
<div class="modal-dialog">
<div class="modal-content">
<div class="modal-header">
  <h5 class="modal-title" id="deleteModalLabel">Bạn có chắc chắn muốn xóa ?</h5>
  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<div class="modal-body">
  Việc xóa sẽ mất mất dữ liệu. Bạn đã chắc chắn xóa hãy ấn đồng ý
  <input type="hidden" value="" id="projectDeleteAll" name="projectDeleteAll">
</div>
<div class="modal-footer">
  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
  <button type="submit" class="btn btn-primary"  href="/admin/list-project">Đồng ý</button>
</div>
</div>
</div>
</div>
                             
  
                          </form>
                    </tr>
                </thead>
                 
                    <tbody>  
                      <% if (projects.length > 0) { %>
                        <% for (let proj of projects) { %>
                          <% if (Math.ceil((proj.endTime - new Date()) / (1000 * 60 * 60 * 24)) > 0) { %>
                            <tr>
                              <td class="verticalAlign"><input type="checkbox" id="option<%= proj._id %>" name="option<%= proj._id %>" ></td>
                              <td class="verticalAlign"><h6 class="my-0"><%= proj.title %></h6>
                                  <small class="text-muted">Còn <%= Math.ceil((proj.endTime - new Date()) / (1000 * 60 * 60 * 24)) %> ngày</small></td>
                              <td style="width: 50%;">
                                <small class="my-2">100.000.000 VND /<%= proj.maxMoney %> VND</small>
                                <small class="progress">
                                  <div class="progress-bar" role="progressbar" style="width: 25%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">25%</div>
                                </small>
                              
                                  
                              <small class="my-2">Lượt quyên góp: 300</small>
                            
                                 
                              </td>
                              <td class="verticalAlign pr-0" style="width: 9%;"> 
                                
                                  <button class="btn btn-primary btn-icon-split " data-toggle="modal" data-target="#editModal-<%= proj._id %>">
                                    <span class="icon text-white-60">
                                      <i class="fas fa-edit"></i>
                                    </span>
                                  </button>
                                <!-- Edit Modal-->
<div class="modal fade" id="editModal-<%= proj._id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel1"
aria-hidden="true">
<div class="modal-dialog" role="document">
    <div class="modal-content" style="width: 800px;">
      <form class="needs-validation" action="/admin/list-project" method="POST" enctype="multipart/form-data" >
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel1">Sửa dự án</h5>
            <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">×</span>
            </button>
        </div>
        <div class="modal-body">
          <div class="col-md-7 col-lg-12">
                  <div class="row g-3">
                    <div class="col-12">
                        <label for="title" class="form-label">Tên dự án</label>
                        <input type="text" class="form-control clear" id="title" name="title" value="<%= proj.title %>" required autofocus>                  
                    </div>

                    <div class="col-sm-6">
                      <label for="startTime" class="form-label">Ngày bắt đầu</label>
                      <input type="text" class="form-control clear" id="startTime" name="startTime" value="<%= proj.startTime.toLocaleDateString('pt-PT') %>" required>
                    </div>
        
                    <div class="col-sm-6">
                      <label for="lastName" class="form-label">Ngày kết thúc</label>
                      <input type="text" class="form-control clear" id="endTime" name="endTime" value="<%= proj.endTime.toLocaleDateString('pt-PT') %>" required>     
                    </div>
        
        
                    <div class="col-12">
                      <label for="maxMoney" class="form-label">Số tiền quyên góp </label>
                      <input type="text" class="form-control clear" id="maxMoney" name="maxMoney" value="<%= proj.maxMoney %>">
                    </div>
        
                    <div class="col-12">
                      <label for="image" class="form-label">Ảnh dự án</label>
                      <input type="file" class="form-control clear" id="image" name="image" value="<%= proj.image %>">
                    </div>

                    <div class="col-12">
                      <label for="description" class="form-label">Mô tả</label>
                      <textarea id="description" name="description" class="form-control clear"><%= proj.description %></textarea>
                    </div>

                    <div class="col-12">
                        <label for="content" class="form-label">Nội dung</label>
                        <textarea id="content" name="content" class="form-control clear" style="height: 300px;"><%= proj.content %></textarea>       
                    </div>

                      <div class="text-center">
                        <a type="button" class="small mb-3" id="btnrs">Xóa tất cà trường</a>
                        <br>
                      </div>    
                      <input type="hidden" value="<%= proj._id %>" name="projectId">
               
                
            </div>
           </div>
        <div class="modal-footer">
            <button class="btn btn-secondary" type="button" data-dismiss="modal">Hủy</button>
            <button class="btn btn-primary" type="submit" href="/admin/list-project">Xác nhận</button>
        </div>
      </form>
    </div>
</div>
</div>
                                  
                              </td>
                              <td class="verticalAlign pl-0" style="width: 9%;">
                                <button class="btn btn-danger btn-icon-split" data-bs-toggle="modal" data-bs-target="#deleteModal-<%= proj._id %>"> <span class="icon text-white-60">
                                  <i class="far fa-trash-alt"></i>
                              </span></button>

                              
                                <form action="/admin/list-project" method="POST">
                                  
                                 <!-- Delete Modal -->
 <div class="modal fade" id="deleteModal-<%= proj._id %>" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="deleteModalLabel">Bạn có chắc chắn muốn xóa ?</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        Việc xóa sẽ mất mất dữ liệu. Bạn đã chắc chắn xóa hãy ấn đồng ý
        <input type="hidden" value="<%= proj._id %>" id="projectDeleteId" name="projectDeleteId">
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
        <button type="submit" class="btn btn-primary"  href="/admin/list-project">Đồng ý</button>
      </div>
    </div>
  </div>
</div>
                                   
        
                                </form>
                              </td>
                          </tr>               
                          <% } %>
                        <% } %>
                      <% } %>  
                    </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
        
      </div>
        
      </div>

    </div>
    <!-- /.container-fluid -->
   
<!-- End of Main Content -->

    </header>
    <script>

  $('#btnrs').click(function(){
        $('.clear').val('');
      })
    </script>
    
<%- include('../includes/javascript.ejs') %>
<%- include('../includes/end.ejs') %>

