<body>  
    <header class="masthead">
          <!-- Page Wrapper -->
    <div id="wrapper">

 <%- include('../includes/navigation-admin.ejs') %>
  
    <!-- End of Page Wrapper -->
       
    <!-- Begin Page Content -->
    <div class="container-fluid">
        <br><br>
        <!-- Page Heading -->
        <h1 class="h3 mb-2 text-gray-800">Quản lý dự án</h1>
        <br>


      <!-- DataTales Example -->
      <div class="card shadow mb-4">
        <div class="card-body">
          <div class="row g-5">
            <div class="col-md-5 col-lg-4 order-md-last">
              <h4 class="d-flex justify-content-between align-items-center mb-3">
                <span class="text-primary">Dự án đã kết thúc</span>
              </h4>
              <ul class="list-group mb-3">
                <li class="list-group-item d-flex justify-content-between lh-sm" data-bs-toggle="collapse" data-bs-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
                  <div>
                    <h6 class="my-0">Product name</h6>
                    <small class="text-muted">Brief description</small>
                  </div>
                  <i class="fas fa-lg fa-angle-down "></i>
                </li>
                <div class="collapse" id="collapseExample">
                  <div class="card card-body">
                   <p><i class="fas fa-calendar-alt"></i> &#160; Ngày bắt đầu: 14/2/2002</p>
                   <p><i class="fas fa-calendar-alt"></i>  &#160;Ngày kết thúc: 14/4/2002</p>
                   <p><i class="fas fa-dollar-sign"></i>  &#160; Số tiền quyên góp: 400.000.000 VND</p>
                   <p><i class="fas fa-shopping-cart"></i>  &#160; Lượt quyên góp: 643</p>
  
                  </div>
                </div>         
                
              </ul>
            </div>
            <div class="col-md-7 col-lg-8">
              <h4 class="mb-3 text-primary">Dự án đang diễn ra</h4>
              <div class="table-responsive">
                <table class="table" id="dataTable" cellspacing="0">
                 
                    <tbody>  
                        <tr>
                            <td class="verticalAlign"><h6 class="my-0">Trái tim cho em</h6>
                                <small class="text-muted">Còn 30 ngày</small></td>
                            <td style="width: 50%;">
                              <small class="my-2">100.000.000 VND / 400.000.000 VND</small>
                              <small class="progress">
                                <div class="progress-bar" role="progressbar" style="width: 25%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">25%</div>
                              </small>
                            
                                
                            <small class="my-2">Lượt quyên góp: 300</small>
                          
                               
                            </td>
                            <td class="verticalAlign" style="width: 18%;"> <button class="btn btn-primary btn-icon-split" data-toggle="modal" data-target="#editModal">
                                <span class="icon text-white-60">
                                    <i class="fas fa-edit"></i>
                                </span>
                            </button> &#160; <button class="btn btn-danger btn-icon-split">
                                <span class="icon text-white-60">
                                    <i class="far fa-trash-alt"></i>
                                </span>
                            </button></td>
                        </tr>
                        
                    </tbody>
                </table>
            </div>
            </div>
          </div>
        </div>
        
      </div>
        
      </div>

    </div>
